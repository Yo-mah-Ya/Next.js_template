{
  "preset": "ts-jest",
  "transform": {
    "^.+\\.tsx?$": "babel-jest",
    "^.+\\.jsx?$": "babel-jest"
  },
  "testRegex": "test.ts$",
  "testPathIgnorePatterns": ["/node_modules/", "<rootDir>/.next"],
  "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx"],
  "moduleNameMapper": {
    "^.+\\.scss$": "identity-obj-proxy"
  },
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "moduleDirectories": ["node_modules", "src"],
  "verbose": true
}
